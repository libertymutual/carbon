{
  "name": "@lmig/dss-app-template",
  "version": "0.2.0",
  "description": "Template for creation of new app with The DSS App Platform.",
  "main": "index.js",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "node node_modules/jest/bin/jest.js",
    "update-snapshots": "jest -u",
    "test:nocoverage": "jest --watchAll --collectCoverage false",
    "bundle": "npm run bundle:ios && npm run bundle:android",
    "bundle:ios": "react-native bundle --platform ios --entry-file index.ios.js --bundle-output ios/main.jsbundle --assets-dest ./ios/HelloWorld",
    "bundle:android": "react-native bundle --platform android --entry-file index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest ./android/app/src/main/res",
    "lint": "node_modules/.bin/esw ./app",
    "lint:watch": "npm run lint -- --watch",
    "develop": "npm-run-all --parallel start lint:watch test:nocoverage",
    "postinstall": "sed -i '' 's/#import <RCTAnimation\\/RCTValueAnimatedNode.h>/#import \"RCTValueAnimatedNode.h\"/' ./node_modules/react-native/Libraries/NativeAnimation/RCTNativeAnimatedNodesManager.h && sed -i '' 's:#import <fishhook/fishhook.h>:#import <React/fishhook.h>:' ./node_modules/react-native/Libraries/WebSocket/RCTReconnectingWebSocket.m"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.forge.lmig.com:7999/pidss/dss-app-template.git"
  },
  "keywords": [
    "dss",
    "app",
    "template",
    "ios",
    "android"
  ],
  "author": "OpenSource@LibertyMutual.com",
  "license": "ISC",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/app/**.{js,jsx}"
    ],
    "coverageDirectory": "./build/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/android/app/build/",
      "<rootDir>/node_modules/"
    ],
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/jest-setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-navigation)"
    ],
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "jest-junit": {
    "output": "./build/reports/junit.xml"
  },
  "devDependencies": {
    "babel-eslint": "8.0.1",
    "eslint": "^4.12.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "eslint-plugin-react-native": "3.2.0",
    "eslint-watch": "3.1.3",
    "flow-bin": "0.59.0",
    "jest": "21.2.1",
    "jest-junit": "^3.3.0",
    "jscs": "3.0.7",
    "npm-run-all": "4.1.2",
    "react-test-renderer": "16.2.0",
    "redux-mock-store": "1.3.0",
    "babel-preset-flow": "^6.23.0"
  },
  "dependencies": {
    "lmig--dss-app-platform": "0.0.9-beta221",
    "prop-types": "15.6.0",
    "react": "16.0.0",
		"react-native": "0.50.4",
    "react-navigation": "1.0.0-beta.21",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-persist": "4.10.2",
    "redux-thunk": "2.2.0"
  }
}
